.ytx-product-compare
    padding-bottom 1000px
    .main-left
        width 177px
        .setting-operation
            position fixed
            top 130px
            left 32px
            z-index 10
            &:hover
                .menu
                    display block
                i
                    &:last-child
                        transform rotate(-180deg)
        .dropdown-toggle-wrapper
            height 56px
            line-height 56px
            width 90px
            border 1px solid $border-color-1
            border-radius 30px
            text-align center
            position relative
            i
                display inline-block
                width 24px
                height 24px
                position absolute
                top 0
                bottom 0
                margin auto 0
                &:first-child
                    left 20px
                    background url("~statics/icon_setting.png") no-repeat center center
                &:last-child
                    right 20px
                    background url("~statics/images/checkout/arrow-down.png") no-repeat center center
        .menu
            border-bottom 1px solid $border-color-1
            display none
            background #fff
            .menu-item
                border-top 1px solid $border-color-1
                height 64px
                width 129px
                line-height 64px
                font-weight bold
                color #ccc
                display flex
                align-items center
                &.active
                    color $all-color-1
            .item-text
                display inline-block
                line-height 20px
                cursor pointer
        .ytx-nav
            left 32px
            bottom 32px
            .nav-item
                .item-left
                    margin-right 6px
                    .line
                        height 50px
                        width 2px
                        background-color #e6e6e6
                    .dot
                        width 8px
                        height 8px
                        background #ccc
                        border-radius 50%  
                .item-right
                    margin-top -4px
                    word-break break-word
                    width 80px
                &.active
                    .item-right
                        color $all-color-1
                    .dot
                        background $all-color-1           
    .main-right
        margin-left 177px
        margin-right 32px
        .header-fixed
            position fixed
            left 177px
            top 0
            z-index 10
            width calc(100% - 209px)!important
        .right-row
            display flex
            width 100%
            min-width 1103px
            .row-cell
                flex 1
                position relative
                &:not(:last-child):before
                    content ''
                    display inline-block
                    position absolute
                    top 50%
                    right 0
                    height 90%
                    transform translateY(-50%)
                    border-right 1px solid $border-color-1
                .close_icon
                    right 16px
                    top 24px
                    display inline-block
                    width 32px
                    height 32px
                    border-radius 50%
                    cursor pointer
                    background url("~statics/images/checkout/delete.png") no-repeat center center
                    display none
                &:hover
                    .close_icon
                        display block
                .product-pic
                    width 100%
                    justify-content center
                    .no-text-desc
                        height 33px
                .color-dot
                    width 24px
                    height 24px
                    border-radius 50%
                    padding 2px
                    &.active
                        border 1px solid $background-color-4
                    span
                        display inline-block
                        width 100%
                        height 100%
                        border-radius 50%
                .img-wrapper
                    height 270px
                    width 100%
                    img
                        max-width 100%
                        max-height 100%
                .text-desc
                    p
                        line-height 1.2
                        height 38px
            .cell-nodata
                .nodata-pic
                    background url("~statics/icon_empty.png") no-repeat center center
                .more-icon
                    display inline-block
                    height 85px
                    width 100%
                    background url("~statics/icon_produce.png") no-repeat center center
        .title-position
            left 12px
            top -12px
        .right-down-row
            min-width 1103px
    .attr-wrapper
        &.active
            label
                color #6dd6a9
            span
                color #6dd6a9
   .targetitem
                height 160px
                width 100%
                display flex
                justify-content center
                align-items center
                img
                    max-width 100%
                    max-height 100%
            .changepic
                position relative
                padding 0 22px
                .prev,.next
                    width 16px
                    height 16px
                    background-size 75%
                    position absolute
                    top 50%
                    transform translateY(-50%)
                .prev
                    background url("~statics/prev-arrow.png") no-repeat center center
                    left 0
                .next
                    background url("~statics/next-arrow.png") no-repeat center center
                    right 4px
                .picthumbs
                    overflow hidden
                    height 33px
                    width 192px
                .picinner
                    position absolute
                    left 0
                    width 300%
                    transition all .5s ease-out
                    .picthumbitem
                        width 30px
                        height 30px
                        border 1px solid #e5e5e5
                        text-align center
                        margin 0 10px 0 0
                        display inline-block
                        vertical-align middle
                        position relative
                    img
                        max-height 80%
                        vertical-align middle
                        position relative
                        top 50%
                        transform translateY(-50%)
                    .activeitem
                        border 1px solid $background-color-4