.zlsomecomments
    .commentcontent
        padding 129px 112px 0 68px
        .writecomment
            width 1488px
            height 317px
            box-sizing border-box
            border 1px solid #e5e5e5
            padding 37px 77px 20px 0
            margin-top 54px
            font-family HelveticaNeue
            display flex
            .left
                width 222px
                height 254px
                padding 42px 0 31px 0
                display flex
                justify-content center
                flex-wrap wrap
                text-align center
                .commodityimg
                    width 128px
                    height 128px
                    font-size 0
                    margin-bottom 11px
                    img
                        width 128px
                        height 128px
                .commodityname
                    width 100%
                    font-size 16px        
                    font-weight bold
                    height 30px
                    line-height 30px
                    letter-spacing 0.5px
                    margin 0
                    padding 0
                    color #252525
                .commoditydescribe   
                    width 100%
                    margin 0
                    padding 0
                    font-size 14px 
                    color #666666
                    font-weight 600
            .right
                width 1184px
                .productrating
                    height 20px
                    font-size 0
                    display flex
                    margin-bottom 7px
                    color #252525
                    .rating                   
                        font-size 14px
                        font-weight bold
                        height 20px
                        line-height 20px
                    .q-rating
                        i 
                            font-size 0
                            width 20px
                            height 20px
                            background url('~statics/images/orderReview/icon-start.png') center no-repeat
                            &.active
                                background url('~/statics/images/orderReview/icon-start-active.png') center no-repeat
                .productcomment
                    margin-bottom 8px
                    textarea
                        width 1184px
                        height 201px
                        box-sizing border-box
                        border 1px solid #e5e5e5
                        outline none
                        resize none
                        &::-webkit-input-placeholder
                            color $all-color-3
                .productupload
                    display flex
                    .icon_camera
                        width 23px
                        height 20px
                        position absolute
                        background url('~statics/images/Myorder/camera.png') no-repeat center
                        input 
                            opacity 0
                            width 100%
                            height 100%
                            position absolute
                            cursor pointer
                            top 0
                            left 0
                    span 
                        display inline-block
                        height 20px
                        margin-left 31px
                        line-height 20px
                        color #666666
                        font-size 14px
                        font-weight 400                
        .somecomments-btn
            width 1488px
            height 197px
            position relative
            .btn
                position absolute
                top 31px
                right -1px
                width 320px
                height 64px
                background-color #6dd6a9
                text-align center
                line-height 64px
                border-radius 32px
                font-size 20px
                font-weight bold
                color #fff
            
    .footer
        padding-left 205px
        font-size 0
        position relative
        img
            width 1666px
            height 618px 
            position absolute
            top 0
            left -44px          