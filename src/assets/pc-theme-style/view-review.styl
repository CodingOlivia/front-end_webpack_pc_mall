.viewReview-wrap
   margin-top 88px
   width 100%
   .main
      width 80%
      margin 0 auto
   .q-rating
      i 
        font-size 0
        width 20px
        height 20px
        opacity 1
        background url('~statics/images/orderReview/icon-start.png')  no-repeat center
        &.active
           background url('~statics/images/orderReview/icon-start-active.png') no-repeat center
   .orderInfo
      border 1px solid $border-color-1
      font-size 16px
      &>div
         padding 38px 0 38px 64px
         .rate-text
             font-size 14px
             color $font-color-5
             font-family HelveticaNeue-Medium
             margin-right 40px
      .orderInfo-left
         text-align center
         border-right 1px solid $border-color-1
         font-family HelveticaNeue-Medium
         padding-left 0
   .viewReview-list
      border 1px solid $border-color-1
      margin-top 32px
      
      .viewReview-item
         padding-bottom 32px
         position relative
         &:after
            content ''
            display block
            border-bottom 1px solid $border-color-1
            left 20px
            bottom 0
            position absolute
            width calc(100% - 68px)
         &:last-child
            &:after 
               opacity 0
         .viewReview-left
            padding-left 20px
            text-align center
            min-width 260px
            .viewReview-img
                height 190px
                width auto
                margin-bottom 24px
                margin-top 30px
                img
                  max-width 190px
                  max-height 190px
            .viewReview-title
                font-size 16px
                margin-bottom 8px
                font-family HelveticaNeue-Medium
            .viewReview-props
                text-align left
                width 190px
                margin 0 auto
                color $font-color-5 
                span
                  margin-right 20px
                  font-size 12px   
      .viewReview-right
          padding-right 48px
          position relative
          overflow hidden
          .status
            display inline-block
            width 131px
            height 131px
            position absolute
            top 0
            right 0 
            text-align center
            em
              font-family 'KhmerMN'
              font-size 32px
              font-style normal
              position absolute
              display inline-block
              line-height 30px
              top 50%
              transform: translateY(-50%) rotateZ(33deg);
              width 100%
              text-align center
              left 0
              word-wrap break-word    
              font-weight bold       
          .status1
            background url("~statics/pass.png") center  no-repeat
            background-size 100% 100%
            color #6dd6a9
            em 
              letter-spacing 8px
              padding-left 8px
          .status2
            background url("~statics/unreviewed.png") center  no-repeat
            background-size 100% 100%
            color #b3b3b3
            em
              font-size 30px
          .status3
            background url("~statics/Reject.png") center  no-repeat
            background-size 100% 100%
            color #e94374
           
          .viewReview-rate
              margin 24px 0 12px
              font-size 14px
              color $font-color-5
              font-family HelveticaNeue-Medium
              justify-content space-between
              padding-right 98px
          .viewReview-message
            line-height 1.6
            padding-right 98px
            word-wrap break-word
          .viewReview-pics
              margin-top 30px
              .viewReview-pic
                   width 80px
                   height 80px
                   position relative
                   display block
                   & + .viewReview-pic
                      margin-left 16px
                   i 
                     width 24px
                     height 24px
                     position absolute
                     display block
                     right -8px
                     top -8px
                     cursor pointer
                     background url('~statics/images/orderReview/icon-delete.png') no-repeat center
                  
                   img 
                      width 100%
                      height 100%
                   input
                      opacity 0
                      width 100%
                      height 100%
                      position absolute
                      top 0
                      left 0
                      cursor pointer
              .message-tip
                 margin-left 16px
                 font-size 12px
                 color $all-color-3
          .svc-text
            margin-top 30px
            padding 28px 24px
            background-color $background-color-3
            .text-content 
              word-break break-all
              margin-bottom 0
              line-height 1.6
              margin-top 6px
            .text-title
              color:#000
            .text-title-color
              .text-title             
                color #ff377d    

   .viewReview-btn
      margin 48px 0
      text-align right
      .btn
         width 320px
         height 62px
         line-height 62px
         display inline-block
         background $all-color-1
         color #fff
         text-align center
         border-radius 62px
         font-family HelveticaNeue-Medium
         font-size 24px
         cursor pointer
                 



  