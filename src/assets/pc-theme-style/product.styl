.PDbox
  .ico
      position relative
      .model-share
         position absolute
         right 0
         top 30px
         background #fff
         border 1px solid $all-color-3
         z-index 5
         width 160px
         font-style normal
         .model-share-title
            padding 16px 0 8px 0
            margin 0 16px 0 16px
            border-bottom 1px solid #e5e5e5
            position relative
            i 
               cursor pointer
               position absolute
               width 16px
               height 16px
               display block
               right 0
               top 16px
               background url('~statics/close.png') no-repeat center
               background-size 60% 
         .model-share-con
            padding 0px 16px 16px 16px
            .share-item
                display flex
                align-items center
                margin-top 8px
                cursor pointer
                color $all-color-1
                .share-img
                   margin-right 8px
                   width 32px
                   height 32px
                   img
                      max-width 100%
                      max-height 100%
                .share-name
                   overflow hidden
                   overflow hidden
                   text-overflow ellipsis
                   white-space nowrap
                   flex 1
         &.model-share-cross
            width 350px
            .model-share-title
               border-bottom none
            .share-list
               display flex
               flex-wrap wrap
               .share-item
                   width 25%
                   display block
                   text-align center
                   .share-img
                       width 100%
                       height 40px
                   .share-name
                       margin-top 10px


   