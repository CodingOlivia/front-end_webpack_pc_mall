.orderReviews-wrap
   margin-top 88px
   width 100%
   .main
      width 80%
      margin 0 auto
   .q-rating
      i 
        font-size 0
        width 20px
        height 20px
        background url('~statics/images/orderReview/icon-start.png')  no-repeat center
        opacity 1
        &.active
           background url('~statics/images/orderReview/icon-start-active.png') no-repeat center
   .orderInfo
      border 1px solid $border-color-1
      font-size 16px
      &>div
         padding 38px 0 38px 64px
         .rate-text
             font-size 14px
             color $font-color-5
             font-family HelveticaNeue-Medium
             margin-right 40px
      .orderInfo-left
         text-align center
         border-right 1px solid $border-color-1
         font-family HelveticaNeue-Medium
         padding-left 0
   .orderReviews-list
      border 1px solid $border-color-1
      margin-top 32px
      
      .orderReviews-item
         padding-bottom 32px
         position relative
         &:after
            content ''
            display block
            border-bottom 1px solid $border-color-1
            left 20px
            bottom 0
            position absolute
            width calc(100% - 68px)
         &:last-child
            &:after 
               opacity 0
         .orderReviews-left
            padding-left 20px
            text-align center
            min-width 260px
            .orderReviews-img
                height 190px
                width auto
                margin-bottom 24px
                margin-top 30px
                img
                  max-width 190px
                  max-height 190px
            .orderReviews-title
                font-size 16px
                margin-bottom 8px
                font-family HelveticaNeue-Medium
            .orderReviews-props
                color $font-color-5 
                text-align left
                margin 0 auto
                width 190px

                span
                  margin-right 20px
                  font-size 12px   
      .orderReviews-right
          padding-right 48px
          .orderReviews-rate
              margin 24px 0
              font-size 14px
              color $font-color-5
              font-family HelveticaNeue-Medium
              .rate-text
                 margin-right 16px
          .orderReviews-message
              border 1px solid $border-color-1
              padding 12px
              margin-bottom 24px
              textarea
                 border none
                 outline none
                 width 100%
                 resize none
                 height 97px
                 &::-webkit-input-placeholder
                   color $all-color-3
              .message-count
                  text-align right
                  color $all-color-3
                  font-size 14px
          .orderReviews-pics
              .orderReviews-pic
                   width 80px
                   height 80px
                   position relative
                   display block
                   text-align center
                   position relative
                   & + .orderReviews-pic
                      margin-left 16px
                   i 
                     width 24px
                     height 24px
                     position absolute
                     display block
                     right -8px
                     top -8px
                     cursor pointer
                     background url('~statics/images/orderReview/icon-delete.png') no-repeat center
                  
                   img 
                      width 100%
                      height 100%
                   input
                      opacity 0
                      width 100%
                      height 100%
                      position absolute
                      top 0
                      left 0
                      cursor pointer
              .message-tip
                 margin-left 16px
                 font-size 12px
                 color $all-color-3
   .orderReviews-btn
      margin 48px 0
      text-align right
      .btn
         width 320px
         height 62px
         line-height 62px
         display inline-block
         background $all-color-1
         color #fff
         text-align center
         border-radius 62px
         font-family HelveticaNeue-Medium
         font-size 24px
         cursor pointer
                 



  