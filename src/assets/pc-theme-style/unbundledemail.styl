.ytx-flex-fuc
    display flex
    justify-content center
    align-items center
    padding 35px 0
    i
        display inline-block
        width 54px
        height 54px
        margin-right 16px
    p
        letter-spacing 0
        margin 0
        color $all-color-1
.popup-warning-hint
    i
        background url("~statics/warning-big.png") center center no-repeat
        background-size 100% 100%
    p
        font-size 16px
        font-weight bold 
.popup-operation-success
    i
        background url("~statics/success.png") center center no-repeat
        background-size 100% 100%
    p
        &.top
            font-size 16px
            font-weight bold
        &.down
            font-size 14px
            color #666
            margin-top 6px