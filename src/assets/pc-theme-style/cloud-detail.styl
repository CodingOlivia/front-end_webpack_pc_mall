.cloud
   .cloud-img
      img  
        max-width 100%
        max-height 100%
   .cloud-img-absolute
      position absolute
      top 0
      right 0
      max-width 100%
      max-height 100%
      z-index 0
      img  
        max-width 100%
        max-height 100%
      &.left
        left 0
        right auto
        top auto
        bottom 0
   .cloud-txt
      color #fff
      position relative
      z-index 1
      .cloud-icon
         margin-bottom 30px
      .cloud-h1
         font-size 64px
         color #fff
         font-family HelveticaNeue-Medium
         margin-bottom 40px
      .cloud-h2
        font-size 48px
        font-family HelveticaNeue-Medium
        margin-bottom 30px
      .cloud-h3
        font-size 28px
        margin-bottom 50px
      .cloud-h4
        font-size 16px
        color #b2b2b2
      .cloud-bottom
        .cloud-btn
          min-width 161px
          height 48px
          line-height 48px
          color #fff
          text-align center
          font-size 14px
          font-family HelveticaNeue-Medium
          background $background-color-4
          border-radius 48px
          display inline-block
          cursor pointer
.cloud-01
   background #252525
   padding-left 175px
   padding-bottom 40px
   position relative
   .cloud-01-top
      min-height 665px
   
   .cloud-01-tab
      padding-right 175px
      .cloud-tab-item
         margin-right 16px
         background #2c2c2c
         text-align center
         color #fff
         padding 50px 0 40px 0
         .tab-icon
            height 54px
            margin-bottom 50px
.cloud-02
   background #333333
   min-height 635px
   padding-left 175px
   position relative
   .cloud-img-absolute
