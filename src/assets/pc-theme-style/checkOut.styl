html[app='desktop'], html[app='desktop'] body
  font-family $pc_normal_font
html[app='desktop'] body
  .CheckOutBox
    &.CheckOutBox-slipt
        display block
        &.mt0
            margin-top 0
        .main 
            margin 0 auto
            display block
            width 82%
            &.main-full
                width 100%
    .main 
      .deliveryDetails
         height auto 
         .shareFrom
            padding 0 40px 22px 40px
            margin-top 36px
            border 1px solid $border-color-1 
            background #f5f5f5
            .share-head
               height 60px
               line-height 60px
               .title
                  font-size 16px
                  font-weight bold
            .share-txt 
               color $font-color-5
               font-size 14px
         .contain
            height auto 
         .contain2
            border-top none
            position relative
            .other 
               margin 0
               padding-top 32px
            &:before
               position absolute
               content ' '
               border-bottom 1px solid #fff
               left 0
               top -1px
               width 16px
               z-index 8
            &:after
               position absolute
               content ' '
               border-bottom 1px solid #fff
               right 0
               top -1px
               width 16px
               z-index 8
         .m-right--small 
              margin-right 16px
         .m-bottom--small 
              margin-bottom 16px
         .field-select
              position relative
              margin-top 0
              margin-bottom 18px
              line-height 1.3em
              background #fff
              label
                color $all-color-3
                font-size 12px 
                position absolute 
                top 8px
                left 14px
                em
                  font-style normal 
                  color $negative 
                  margin-right 3px
              .field-view-select
                border 1px solid $border-color-1
                padding 24px 14px 2px 14px
                .q-if-control
                  position relative
                  top -8px
              .q-if:after
                opacity 0
              .q-if:before
                opacity 0
              .q-if-label
                color $all-color-3
              .q-if-focused
                .q-if-label
                    color $all-color-3
              &.q-field-with-error 
                margin-bottom 0
                .q-field-bottom   
                    min-height 18px
                    line-height 14px
                    padding 2px
         .field-inp
            position relative
            margin-bottom 18px
            margin-top 0
            line-height 1.3em
            background #fff
            label
              color $all-color-3
              font-size 12px 
              position absolute 
              top 8px
              left 14px
              em
                font-style normal 
                color $negative 
                margin-right 3px
            .field-view-inp
              border 1px solid $border-color-1
              padding 24px 14px 2px 14px
              .q-if-control
                  position relative
                  top -8px
            .q-if:after
              opacity 0
            .q-if:before
              opacity 0
            .q-if-label
              color $all-color-3
            .q-if-focused
              .q-if-label
                  color $all-color-3
            
            &.q-field-with-error 
                  margin-bottom 0
                  .q-field-bottom   
                      min-height 18px
                      line-height 14px
                      padding 2px
      .feeDetails 
          table.checkOut-table 
             >thead 
                >tr 
                  >th
                    text-align right
          table.checkOut-package-table
             >tbody 
               >tr 
                  >td 
                    .item2-text
                       .item2-data
                           line-height 1.4
    .checkout-totalBox
       margin-bottom 20px
  .checkOut-list
    display flex
    flex-wrap wrap
    margin-left -20px
    margin-top 20px
    .checkOut-item
        width calc(50% - 20px)
        margin-left 20px
        margin-bottom 20px
  .checkout-footer-footer
     position static