.myBusiness.main
    width calc(1536 / 1920 * 100vw)
    padding 40px 30px 30px 30px
    font-family HelveticaNeue
    border 1px solid $border-color-1
    .Primary-wrap
       margin-bottom 60px
       .Primary-h3
          font-size 24px
          font-weight bold
          margin  16px 0
       .btn
          background $background-color-4
          color $all-color-2
          text-align center
          padding 6px 16px
          border-radius 16px
          display inline-block
          cursor pointer
          text-transform uppercase  
          min-width 160px
          font-size 14px
          &.positive
              background none
              color $all-color-1
              border 1px solid $border-color-1
       .Primary-inner-wrap
          .Primary-img
             width 166px
             height 166px
             margin-right 50px
             img 
               max-width 100%
               max-height 100%
           .Primary-content
             .Primary-title
                 font-size 24px
                 margin-bottom 24px
                 font-weight bold
                 .text-tip
                    padding 2px 8px
                    text-align center
                    color #ffffff
                    font-size 14px
                    background $background-color-4
                    margin-left 30px
                    font-weight normal
             .Primary-detail
                 font-size 20px
                 margin-bottom 24px
                 font-weight bold
                 position relative
                 .Primary-date
                    margin-left 20px
                    color $font-color-5
                    font-weight normal
                    font-size 16px
                 .Primary-action
                    position absolute
                    right 0
                    top 0
    .Supplementary-wrap
        .Supplementary-h3
            font-size 18px
            font-weight bold
            margin-bottom  20px
            position relative
            .action-right
               position absolute
               right 0
               top 0
        .btn
            background $background-color-4
            color $all-color-2
            text-align center
            padding 6px 26px
            border-radius 16px
            display inline-block
            cursor pointer
            font-size 14px
            min-width 160px
            font-size 14px
            text-transform uppercase
            &.positive
              background none
              color $all-color-1
              border 1px solid $border-color-1

        .text-tip
            padding 2px 8px
            text-align center
            color #ffffff
            font-size 14px
            background $background-color-4
            font-weight normal
            &.unActive
              background $all-color-3
        .Supplementary-table
           border-top 1px solid $border-color-1
           font-size 14px
           .w30
              width 30%
            .w10
              width 10%
           .Supplementary-head 
              span 
                color $font-color-3
                border-bottom 1px solid $border-color-1
                font-weight normal 
                padding 15px 0
           .Supplementary-content
              .Supplementary-item
                 &>div
                   padding 15px 0
                   border-bottom 1px solid $border-color-1  
                   .action-text
                      color #6abcfc
                      cursor pointer   
          